[build]
  base = "web"
  command = "npm run build"
  publish = "web/dist"


# ✅ SPA redirect: keeps React/Vite routes working
[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 200

# ✅ Functions redirect: sends /api/* calls to Netlify Functions
[[redirects]]
  from = "/api/*"
  to = "/.netlify/functions/:splat"
  status = 200
